{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_order.order.header.show'|trans({'%number%': order.number})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(order, 'list') }}
{{ admin_resource_btn(order, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_order_invoice_download', {'orderId': order.id}), 'ekyna_order.order.field.invoice_pdf', {'icon': 'download'}, {'target': '_blank'}) }}
    {{ admin_resource_btn(order, 'edit') }}
    {{ admin_resource_btn(order, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#orde-order-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	    <li><a href="#orde-order-invoice" data-toggle="tab">{{ 'ekyna_order.order.field.invoice'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="orde-order-general">
		        <div class="row">
                    <div class="col-md-6">{{ show_row(order.number, 'text', 'ekyna_core.field.number', {'label_nb_col': 4}) }}</div>
                    <div class="col-md-6">{{ show_row(order.createdAt, 'datetime', 'ekyna_core.field.created_at', {'label_nb_col': 4}) }}</div>
                </div>
		        <div class="row">
                    <div class="col-md-6">{{ show_row(order.atiTotal, 'number', 'ekyna_order.order.field.ati_total', {'label_nb_col': 4, 'append': 'â‚¬'}) }}</div>
                    <div class="col-md-6">{{ show_row(order.totalWeight, 'number', 'ekyna_order.order.field.weight_total', {'label_nb_col': 4, 'append': 'g', 'precision': 0}) }}</div>
                </div>
                {{ show_row(order.user, 'entity', 'ekyna_order.order.field.customer', {'field': 'email', 'route': 'ekyna_user_user_admin_show', 'route_params_map': {'userId': 'id'}}) }}
                <div class="row">
                    <div class="col-md-6">{{ show_row(render_identity(order), 'text', 'ekyna_core.field.identity', {'label_nb_col': 4}) }}</div>
                    <div class="col-md-6">{{ show_row(order.email, 'text', 'ekyna_core.field.email', {'label_nb_col': 4}) }}</div>
                </div>
		        <div class="row">
                    <div class="col-md-6">
                        <div class="row show-row">
                            <div class="col-md-4 show-label">{{ 'ekyna_order.order.field.invoice_address'|trans }}</div>
                            <div class="col-md-8">
                                <div class="show-widget show-widget-block">
                                    {{ render_address(order.invoiceAddress) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row show-row">
                            <div class="col-md-4 show-label">{{ 'ekyna_order.order.field.delivery_address'|trans }}</div>
                            <div class="col-md-8">
                                <div class="show-widget show-widget-block">
                                    {% if order.requiresShipment %}
                                        {% if order.sameAddress %}
                                            {{ 'ekyna_order.order.field.same_address'|trans }}
                                        {% else %}
                                            {{ render_address(order.deliveryAddress) }}
                                        {% endif %}
                                    {% else %}
                                        {{ 'ekyna_order.order.field.no_shipment'|trans }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
		    </div>
		    <div class="tab-pane" id="orde-order-invoice">
		        <iframe src="{{ path('ekyna_order_invoice_render', {'orderId': order.id}) }}" style="height:500px;"></iframe>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}