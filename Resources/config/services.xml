<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_order.order_updater.class">Ekyna\Bundle\OrderBundle\Updater\OrderUpdater</parameter>
        <parameter key="ekyna_order.order_subscriber.class">Ekyna\Bundle\OrderBundle\Listener\OrderSubscriber</parameter>

        <parameter key="ekyna_order.order_item.class">Ekyna\Bundle\OrderBundle\Entity\OrderItem</parameter>
    </parameters>

    <services>
        <!-- Updater -->
        <service id="ekyna_order.order_updater" class="%ekyna_order.order_updater.class%" />

        <!-- Events subscriber -->
        <service id="ekyna_order.order_subscriber" class="%ekyna_order.order_subscriber.class%">
            <argument type="service" id="ekyna_order.order_updater" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>

</container>
