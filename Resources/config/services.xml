<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_order.settings.class">Ekyna\Bundle\OrderBundle\Settings\OrderSettingsSchema</parameter>

        <parameter key="ekyna_order.order_item.class">Ekyna\Bundle\OrderBundle\Entity\OrderItem</parameter>

        <parameter key="ekyna_order.order.updater.class">Ekyna\Bundle\OrderBundle\Updater\OrderUpdater</parameter>
        <parameter key="ekyna_order.order.state_resolver.class">Ekyna\Bundle\OrderBundle\Resolver\OrderStateResolver</parameter>
        <parameter key="ekyna_order.order.number_generator.class">Ekyna\Bundle\OrderBundle\Generator\NumberGenerator</parameter>

        <parameter key="ekyna_order.order.listener.class">Ekyna\Bundle\OrderBundle\EventListener\OrderListener</parameter>
        <parameter key="ekyna_order.order_item.listener.class">Ekyna\Bundle\OrderBundle\EventListener\OrderItemListener</parameter>

        <parameter key="ekyna.payum.paypal.action.capture_order_using_express_checkout.class">Ekyna\Bundle\OrderBundle\Payum\Action\Paypal\CaptureOrderUsingExpressCheckoutAction</parameter>

        <parameter key="ekyna_order.order_item.factory.class">Ekyna\Bundle\OrderBundle\Factory\OrderItemFactory</parameter>

        <parameter key="ekyna_order.order.form_type.class">Ekyna\Bundle\OrderBundle\Form\Type\OrderType</parameter>
        <parameter key="ekyna_order.order_items.form_type.class">Ekyna\Bundle\OrderBundle\Form\Type\OrderItemsType</parameter>
        <parameter key="ekyna_order.order_item.form_type.class">Ekyna\Bundle\OrderBundle\Form\Type\OrderItemType</parameter>
        <parameter key="ekyna_order.add_product.form_type.class">Ekyna\Bundle\OrderBundle\Form\Type\AddProductType</parameter>
        
        <parameter key="ekyna_order.twig_extension.class">Ekyna\Bundle\OrderBundle\Twig\OrderExtension</parameter>
    </parameters>

    <services>
        <!-- Settings Schema -->
        <service id="ekyna_order.settings" class="%ekyna_order.settings.class%">
            <tag name="ekyna_setting.schema" namespace="order" position="9" />
        </service>

        <!-- Updater -->
        <service id="ekyna_order.order.updater" class="%ekyna_order.order.updater.class%" />

        <!-- State resolver -->
        <service id="ekyna_order.order.state_resolver" class="%ekyna_order.order.state_resolver.class%" />

        <!-- Number generator -->
        <service id="ekyna_order.order.number_generator" class="%ekyna_order.order.number_generator.class%">
            <argument type="service" id="ekyna_order.order.repository" />
        </service>

        <!-- Events subscribers -->
        <service id="ekyna_order.order.listener" class="%ekyna_order.order.listener.class%">
            <argument type="service" id="ekyna_order.order.operator" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="ekyna_order.order.updater" />
            <argument type="service" id="ekyna_order.order.state_resolver" />
            <argument type="service" id="ekyna_order.order.number_generator" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="ekyna_order.order_item.listener" class="%ekyna_order.order_item.listener.class%">
            <argument type="service" id="event_dispatcher" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Payum -->
        <service id="ekyna.payum.paypal.action.capture_order_using_express_checkout" class="%ekyna.payum.paypal.action.capture_order_using_express_checkout.class%">
            <argument type="service" id="payum.security.token_factory" />
        </service>

        <!-- OrderItem Factory -->
        <service id="ekyna_order.order_item.factory" class="%ekyna_order.order_item.factory.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="router" />
        </service>

        <!-- Form Types -->
        <service id="ekyna_order.order.form_type" class="%ekyna_order.order.form_type.class%">
            <argument>%ekyna_order.order.class%</argument>
            <argument>%ekyna_user.user.class%</argument>
            <tag name="form.type" alias="ekyna_order_order" />
        </service>
        <service id="ekyna_order.order_items.form_type" class="%ekyna_order.order_items.form_type.class%">
            <tag name="form.type" alias="ekyna_order_order_items" />
        </service>
        <service id="ekyna_order.order_item.form_type" class="%ekyna_order.order_item.form_type.class%">
            <argument>%ekyna_order.order_item.class%</argument>
            <tag name="form.type" alias="ekyna_order_order_item" />
        </service>
        <service id="ekyna_order.add_product.form_type" class="%ekyna_order.add_product.form_type.class%">
            <argument>%ekyna_product.options.configuration%</argument>
            <tag name="form.type" alias="ekyna_order_add_product" />
        </service>

        <!-- Twig extensions -->
        <service id="ekyna_order.twig_extension" class="%ekyna_order.twig_extension.class%">
            <argument>%ekyna_order.document_logo%</argument>
            <tag name="twig.extension" />
        </service>
    </services>

</container>
