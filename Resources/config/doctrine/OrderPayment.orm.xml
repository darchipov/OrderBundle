<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\OrderBundle\Entity\OrderPayment" table="orde_order_payment">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <many-to-one field="order" target-entity="Ekyna\Bundle\OrderBundle\Entity\Order" inversed-by="payments">
            <join-column name="order_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

    </entity>

</doctrine-mapping>