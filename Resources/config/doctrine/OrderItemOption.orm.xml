<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\OrderBundle\Entity\OrderItemOption" table="orde_order_item_option">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="designation" column="designation" type="string" length="255" />
        <field name="reference" column="reference" type="string" length="32" />
        <field name="price" column="price" type="decimal" precision="10" scale="5" />
        <field name="weight" column="weight" type="integer" />

        <many-to-one field="orderItem" target-entity="Ekyna\Bundle\OrderBundle\Entity\OrderItem" inversed-by="options" orphan-removal="true">
            <join-column name="order_item_id" referenced-column-name="id" on-delete="CASCADE" nullable="true" />
        </many-to-one>
        <many-to-one field="option" target-entity="Ekyna\Bundle\ProductBundle\Entity\AbstractOption">
            <join-column name="option_id" referenced-column-name="id" on-delete="RESTRICT" nullable="true" />
        </many-to-one>
        <many-to-one field="tax" target-entity="Ekyna\Bundle\ProductBundle\Entity\Tax">
            <join-column name="tax_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

    </entity>

</doctrine-mapping>