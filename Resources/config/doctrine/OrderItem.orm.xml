<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\OrderBundle\Entity\OrderItem" table="orde_order_item">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="order" target-entity="Ekyna\Bundle\OrderBundle\Entity\Order" inversed-by="items" orphan-removal="true">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE" />
            <gedmo:sortable-group />
        </many-to-one>

        <many-to-one field="product" target-entity="Ekyna\Bundle\ProductBundle\Entity\AbstractProduct">
            <join-column name="product_id" referenced-column-name="id" nullable="true" on-delete="RESTRICT" />
        </many-to-one>

        <field name="designation" column="designation" type="string" length="255" />
        <field name="reference" column="reference" type="string" length="32" />
        <field name="price" column="price" type="decimal" precision="10" scale="5" />
        <field name="weight" column="weight" type="integer" />
        <many-to-one field="tax" target-entity="Ekyna\Bundle\ProductBundle\Entity\Tax">
            <join-column name="tax_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <field name="extras" column="extras" type="json_array" />

        <one-to-many field="options" target-entity="Ekyna\Bundle\OrderBundle\Entity\OrderItemOption" mapped-by="orderItem">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <field name="quantity" column="quantity" type="integer" />
        <field name="position" column="position" type="integer">
            <gedmo:sortable-position />
        </field>

    </entity>

</doctrine-mapping>